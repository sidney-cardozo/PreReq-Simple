  <section class="employer-profile-edit">
    <div class="container">
      <div class="row">
        <div class="col-xs-1 col-lg-4"></div>
        <div class="col-xs-10 col-lg-4 text-center">
          <h2 class="take-out-margin-t">Edit company profile</h2>
        </div>
        <div class="col-xs-1 col-lg-4"></div>
      </div>

      <div class="row">
        <div class="col-xs-4 col-lg-5"></div>
        <div class="col-xs-4 col-lg-2 text-center">
          <%= image_tag @employer.image.thumb, class: "comp-logo"%>
        </div>
        <div class="col-xs-4 col-lg-2"></div>
      </div>

      <div class="row">
        <div class="col-xs-1 col-lg-3"></div>
        <div class="col-xs-10 col-lg-6">
          <div class="row">

             <%= form_for @employer, html: {multipart: true}, url: {action: "update"} do |form| %>
        <div class="form-group">
          <%= form.label :image, "Logo:" %>
          <%= form.file_field :image %>
        </div>
          <div class="form-group">
          <%= form.label :name, "Company name:" %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :description, "Description:" %>
          <%= form.text_area :description, class: 'form-control', rows: '5' %>
        </div>

        <%= form.submit 'Update account', class: 'btn btn-primary' %>
        <% end %>




</div>

          </div>
    <div class="col-xs-1 col-lg-3"></div>
    </div>
    </div>
  </section>