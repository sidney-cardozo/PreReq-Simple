<section class="employer-profile">
  <div class="container">
    <div class="row">
      <div class="col-xs-1 col-lg-4"></div>
      <div class="col-xs-10 col-lg-4 text-center">
      <h2 class="top-title">Company Profile</h2>
        </div>
        <div class="col-xs-1 col-lg-4"></div>
      </div> <!-- CLOSES ROW -->

      <div class="row">
      <div class="col-xs-0 col-lg-3"></div>
      <div class="col-xs-4 col-lg-2">
        <%= image_tag @employer.image.thumb, class: "comp-logo"%>
      </div>
      <div class="col-xs-8 col-lg-4 take-out-padding-lr">
        <h3 class="take-out-margin-t"><%= @employer.name %></h3>
        <a class="company-email" href="#"><%= @user.email %></a>
      </div>
      <div class="col-xs-0 col-lg-3"></div>
      </div>

  <br>

      <div class="row">

        <div class="col-xs-1 col-lg-3"></div>
        <div class="col-xs-10 col-lg-6 text-center">
          <table class="table table-responsive">
    <tbody>

    <tr>
      <th scope="row" class="table-head">Description:</th>
      <td class="table-content"><%= @employer.description %></td>

    </tr>

  </tbody>
    </table>


        </div>
        <div class="col-xs-1 col-lg-3"></div>

      </div>
      <div class="row text-center">
          <a data-toggle="modal" data-target="#employer-edit">Add/edit content</a>
          <a type="submit" href="<%= employer_jobs_path(@employer) %>">Job postings</a>
      </div>
    </div>


  <div class="modal fade" id="employer-edit" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header ">
          <div class="col-xs-10">
            <h4 class="modal-title" id="loginLabel">Employer Edit</h4>
          </div>
          <div class="col-xs-2">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-1 col-lg-3"></div>
            <div class="col-xs-10 col-lg-6">
              <div class="row">

           <%= form_for @employer, html: {multipart: true}, url: {action: "update"} do |form| %>

            <div class="upload-preview">
              <img />
            </div>

            <div class="form-group">
              <%= form.label :image, "Photo:" %>
              <%= form.file_field :image , class: "form-control image"%>
            </div>
            <div class="form-group">
              <%= form.label :name, "Company name:" %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :description, "Description:" %>
              <%= form.text_area :description, class: 'form-control', rows: '5' %>
            </div>

            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      <% end %>
    </div>
  </div>
  </div>
</section>