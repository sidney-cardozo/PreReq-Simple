<section class="employer-profile">
  <div class="container">

<div class="row top-title">
      <div class="col-xs-0 col-lg-3"></div>
      <div class="col-xs-12 col-lg-6">
      <div class="row card-bg">
      <div class="col-xs-4 col-lg-4">
        <%= image_tag @employer.image.thumb, class: "comp-logo"%>
      </div>
      <div class="col-xs-8 col-lg-8 take-out-padding-lr">
        <h3 class="take-out-margin-t"><%= @employer.name %></h3>
        <a class="company-email" href="#"><%= @user.email %></a>



      </div>
      </div>
      </div>
      <div class="col-xs-0 col-lg-3"></div>
      </div>

<!--  -->




    <div class="row">
      <div class="col-xs-1 col-lg-3"></div>
      <div class="col-xs-10 col-lg-6 text-center">
        <table class="table table-responsive">
          <tbody>
            <tr>
              <th scope="row" class="table-head">Company Description:</th>
              <td class="table-content"><%= @employer.description %></td>
            </tr><tr>
              <th scope="row" class="table-head">Positions Offered:</th>
              <td class="table-content"><%= @employer.positions_offered %></td>
            </tr>
            </tr><tr>
              <th scope="row" class="table-head">LinkedIn Profile</th>
              <td class="table-content"><%= @employer.linkedIn_profile %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-xs-1 col-lg-3"></div>
    </div>



    <div class="row text-center">
      <a data-toggle="modal" data-target="#employer-edit" class="btn btn-primary bottom-margin">Edit Content</a>

    </div>


  </div> <!-- CLOSES CONTAINER -->

<!-- MODAL START -->

  <div class="modal fade" id="employer-edit" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          <h4 class="modal-title" id="loginLabel">Edit Profile</h4>
        </div>
        <div class="modal-body">

               <%= form_for @employer, url: {action: "update"} do |form| %>

               <div class="upload-preview form-submit">
                <img />
              </div>

              <div class="form-group">
                <%= form.label :image, "Photo:" %>
                <%= form.file_field :image , class: "form-control image no-border"%>
              </div>
              <div class="form-group">
                <%= form.label :name, "Company name:" %>
                <%= form.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= form.label :description, "Company Description:" %>
                <%= form.text_area :description, class: 'form-control', rows: '5' %>
              </div>
              <div class="form-group">
                <%= form.label :positions_offered, "Positions Offered:" %>
                <%= form.text_area :positions_offered, class: 'form-control', rows: '7' %>
              </div>
              <div class="form-group">
                <%= form.label :linkedIn_profile, "LinkedIn Link:" %>
                <%= form.text_area :linkedIn_profile, class: 'form-control' %>
              </div>
              <div class="modal-footer form-submit">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
              <% end %>
</div>
  </div>
</div>


<!-- MODAL ENDS -->

</section>