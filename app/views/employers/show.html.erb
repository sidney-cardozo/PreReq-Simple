<section class="employer-profile">
  <div class="container">
    <div class="row">
      <div class="col-xs-1 col-lg-4"></div>
      <div class="col-xs-10 col-lg-4 text-center">
      <h2 class="take-out-margin-t">My profile</h2>
        </div>
        <div class="col-xs-1 col-lg-4"></div>
      </div> <!-- CLOSES ROW -->

      <div class="row">
      <div class="col-xs-0 col-lg-3"></div>
      <div class="col-xs-4 col-lg-2">
        <%= image_tag @employer.image.thumb, class: "im-profile-pic"%>
      </div>
      <div class="col-xs-8 col-lg-4 take-out-padding-lr">
        <h3 class="take-out-margin-t"><%= @employer.name %></h3>
        <a class="profile-email" href="#"><%= @user.email %></a>
      </div>
      <div class="col-xs-0 col-lg-3"></div>
      </div>


      <div class="row">

        <div class="col-xs-1 col-lg-3"></div>
        <div class="col-xs-10 col-lg-6 text-center">
          <h4>Description</h4>
        </div>
        <div class="col-xs-1 col-lg-3"></div>

      </div>
      <br>
      <br>
      <div class="row">
        <form class="text-center" action="/employers/<%= @employer.id %>/edit">
          <button type="submit" class="btn btn-default">Add/edit content</button>
        </form>
      </div>
      </div>
    </section>