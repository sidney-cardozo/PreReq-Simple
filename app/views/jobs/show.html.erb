<section class="job-details">
  <div class="container">

    <div class="row">
      <div class="col-xs-1 col-lg-4"></div>
      <div class="col-xs-10 col-lg-4 text-center">
        <h2 class="top-title">Job Details</h2>
      </div>
      <div class="col-xs-1 col-lg-4"></div>
    </div> <!-- CLOSES ROW -->

    <div class="row">
      <div class="col-xs-0 col-lg-3"></div>
      <div class="col-xs-4 col-lg-2">
        <img class="comp-logo" src="http://lorempixel.com/400/400/">
      </div>
      <div class="col-xs-8 col-lg-4 take-out-padding-lr">
        <h3 class="take-out-margin-t"><%= @employer.name %></h3>
        <p class="comp-description hidden-xs hidden-sm visible-md visible-lg"><%= @employer.description %></p>
      </div>
      <div class="col-xs-0 col-lg-3"></div>
    </div>


<br>

<div class="row text-center">
  <h3 class="job-position"><%= @job.position %></h3>
</div>

<br>


    <div class="row">
      <div class="col-xs-1 col-lg-3"></div>
      <div class="col-xs-10 col-lg-6 text-center">





<table class="table table-responsive">
    <tbody>
    <tr>
      <th scope="row" class="table-head">Job type:</th>
      <td class="table-content"><%= @job.job_type %></td>

    </tr>
    <tr>
      <th scope="row" class="table-head">Description:</th>
      <td class="table-content"><%= @job.description %></td>

    </tr>
    <tr>
      <th scope="row" class="table-head">Requirements:</th>
      <td class="table-content"><%= @job.requirements %></td>

    </tr>



    <tr>
      <th scope="row" class="table-head">To apply:</th>
      <td class="table-content"><%= @job.apply_info %></td>

    </tr>
  </tbody>
    </table>




      </div>
      <div class="col-xs-1 col-lg-3"></div>
    </div>



    <div class="row text-center">
<% if current_user.employer && current_user.employer.id  == @employer.id %>
  <a data-toggle="modal" data-target="#job-edit">Add/edit content</a>
<% end %>

<% if current_user.employer && current_user.employer.id  == @employer.id %>
<a type="submit" href="<%= employer_jobs_path(@employer, @job) %>">My job postings</a>
<% end %>
    </div>

  </div>
      <div class="modal fade" id="job-edit" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header ">
            <div class="col-xs-10">
              <h4 class="modal-title" id="loginLabel">Job Edit</h4>
            </div>
            <div class="col-xs-2">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-xs-1 col-lg-3"></div>
              <div class="col-xs-10 col-lg-6">
                <div class="row">

                <%= form_for @job, url: employer_job_path(@employer, @job), action: "update"  do |form| %>

                  <div class="form-group">
                    <%= form.label :position, "Position:" %>
                    <%= form.text_field :position, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= form.label :job_type, "Job type:" %>
                    <%= form.text_field :job_type, class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= form.label :description, "Description:" %>
                    <%= form.text_area :description, class: 'form-control', rows: '5' %>
                  </div>
                  <div class="form-group">
                    <%= form.label :requirements, "Requirements:" %>
                    <%= form.text_area :requirements, class: 'form-control', rows: '5' %>
                  </div>
                  <div class="form-group">
                    <%= form.label :apply_info, "To apply:" %>
                    <%= form.text_area :apply_info, class: 'form-control', rows: '5' %>
                  </div>

              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>