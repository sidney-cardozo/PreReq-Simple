<section class="edit-job">
  <div class="container">

    <div class="row">
      <div class="col-xs-1 col-lg-4"></div>
      <div class="col-xs-10 col-lg-4 text-center">
        <h2 class="take-out-margin-t">Edit job posting</h2>
        </div>
      <div class="col-xs-1 col-lg-4"></div>
    </div>

    <div class="row">
      <div class="col-xs-1 col-lg-3"></div>
      <div class="col-xs-10 col-lg-6">
        <div class="row">
          <form>
            <div class="form-group">
              <label for="job-position">Position:</label>
              <input type="text" class="form-control" id="job-position">
            </div>
            <div class="form-group">
              <label for="job-type">Job type:</label>
              <input type="text" class="form-control" id="job-type">
            </div>
            <div class="form-group">
              <label for="job-description">Description:</label>
              <textarea type="text" rows="5" class="form-control" id="job-description"></textarea>
            </div>
            <div class="form-group">
              <label for="job-requirements">Requirements:</label>
              <textarea type="text" rows="5" class="form-control" id="job-requirements"></textarea>
            </div>
            <div class="form-group">
              <label for="job-tags">Tags:</label>
              <input type="text" class="form-control" id="job-tags">
            </div>
            <div class="form-group">
              <label for="job-to-apply">To apply:</label>
              <textarea type="text" rows="2" class="form-control" id="job-to-apply"></textarea>
            </div>
          </form>

          <form class="text-center">
            <button type="submit" class="btn btn-default">Save changes</button>
          </form>

          </div>
        </div>

      <div class="col-xs-1 col-lg-3"></div>

    </div> <!-- CLOSES ROW -->

  </div> <!-- CLOSES CONTAINER -->
</section>