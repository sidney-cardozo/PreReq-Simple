
<%= form_tag(jobs_path, method: :get) do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<div class="row">
    <div class="col-xs-0 col-lg-3"></div>
    <% if @jobs.count != 0 %>
    <div class="col-xs-12 col-lg-6 job-postings-box">


      <% @jobs.each do |job| %>
        <%= render 'job', job: job, employer: job.employer %>
        <% end %>
        <% else %>
        <h3>There are no jobs that meet that criteria</h3>

      <% end %>

    </div>
    <div class="col-xs-0 col-lg-3"></div>
</div>