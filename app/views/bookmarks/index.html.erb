<section class="job-search">
  <div class="container">
    <div class="row top-title">
      <div class="col-xs-0 col-lg-2"></div>
      <div class="col-xs-12 col-lg-8 outer-box">

        <div class="row">
          <% if @jobs.count != 0 %>
            <% @jobs.each do |job| %>
              <hr>
              <%= render 'jobs/job', job: job, employer: job.employer %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-0 col-lg-2"></div>
    </div>
  </div>
</section>