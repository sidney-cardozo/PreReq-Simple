<section class="applicant-profile">
  <div class="container">
    <div class="row">
      <div class="col-xs-1 col-lg-4"></div>
      <div class="col-xs-10 col-lg-4 text-center">
      <h2 class="take-out-margin-t">My profile</h2>
        </div>
        <div class="col-xs-1 col-lg-4"></div>
      </div> <!-- CLOSES ROW -->

      <div class="row">
      <div class="col-xs-0 col-lg-3"></div>
      <div class="col-xs-4 col-lg-2">
        <%= image_tag @applicant.image.thumb, class: "im-profile-pic"%>
      </div>
      <div class="col-xs-8 col-lg-4 take-out-padding-lr">
        <h3 class="take-out-margin-t"><%= @applicant.first_name %> <%= @applicant.last_name %></h3>
        <a class="profile-email" href="#"><%= @user.email %></a>
      </div>
      <div class="col-xs-0 col-lg-3"></div>
      </div>


      <div class="row">

        <div class="col-xs-1 col-lg-3"></div>
        <div class="col-xs-10 col-lg-6 text-center">
          <dl class="dl-horizontal">
            <dt>Phone </dt>
            <dd><%= @applicant.phone_number %></dd>
            <dt>Description</dt>
            <dd><%= @applicant.description %></dd>
            <dt>Resume link</dt>
            <dd><%= @applicant.resume_link %></dd>
            <dt>Fields of interest/tags</dt>
            <dd><%= @applicant.fields %></dd>
          </dl>
        </div>
        <div class="col-xs-1 col-lg-3"></div>

      </div>
      <br>
      <br>
      <div class="row text-center">
        <a type="submit" href="<%= edit_applicant_path(@applicant) %>">Add/edit content</a>
      </div>
      </div>
    </section>