  <section class="new-applicant">
    <div class="container">
      <div class="row text-center">
          <h2 class="top-title">Create Profile</h2>
      </div>


      <div class="row">
        <div class="col-xs-1 col-lg-3"></div>
        <div class="col-xs-10 col-lg-6">
          <div class="row">



    <%= form_for @applicant, url: {action: "create"} do |form| %>

        <div class="upload-preview">
          <img />
        </div>

        <div class="form-group">
          <%= form.label :image, "Photo:" %>
          <%= form.file_field :image , class: "form-control image no-border"%>
        </div>
          <div class="form-group">
          <%= form.label :first_name, "First name:" %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :last_name, "Last name:" %>
          <%= form.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :phone_number, "Phone:" %>
          <%= form.text_field :phone_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :description, "Description:" %>
          <%= form.text_area :description, class: 'form-control', rows: '5' %>
        </div>

        <div class="form-group">
          <%= form.label :resume_link, "Link to resume:" %>
          <%= form.text_field :resume_link, class: 'form-control' %>
        </div>

        <div class="form-submit">
        <%= form.submit 'Create account', class: 'btn btn-primary bottom-margin' %>
        </div>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-1 col-lg-3"></div>
    </div>
    </div>
  </section>