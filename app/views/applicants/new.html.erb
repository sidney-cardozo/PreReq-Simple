  <section class="new-applicant">
    <div class="container">
      <div class="row">
        <div class="col-xs-1 col-lg-4"></div>
        <div class="col-xs-10 col-lg-4 text-center">
          <h2 class="take-out-margin-t">Create my profile</h2>
        </div>
        <div class="col-xs-1 col-lg-4"></div>
      </div>


      <div class="row">
        <div class="col-xs-1 col-lg-3"></div>
        <div class="col-xs-10 col-lg-6">
          <div class="row">


    <%= form_for @applicant, url: {action: "create"} do |form| %>
        <div class="form-group">
          <%= form.label :image, "Photo:" %>
          <%= form.file_field :image %>
        </div>
          <div class="form-group">
          <%= form.label :first_name, "First name:" %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :last_name, "Last name:" %>
          <%= form.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :phone_number, "Phone:" %>
          <%= form.text_field :phone_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :description, "Description:" %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :resume_link, "Link to resume:" %>
          <%= form.text_field :resume_link, class: 'form-control' %>
        </div>


        <%= form.submit 'Create account', class: 'btn btn-primary' %>

      <% end %>
    </div>
    <div class="col-xs-1 col-lg-3"></div>
    </div>
    </div>
  </section>